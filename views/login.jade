extends layout

block content
    h2.page-header Login
    p please register using the form below
    form(method='post', action='/admins/login')
        .form-group
            label Username
            input.form-control(name='username', type='text', placeholder='Enter username')
        .form-group
            label Password
            input.form-control(name='password', type='password', placeholder='Enter password')
        input.btn.btn-success(type='submit', name='submit', value='Login')